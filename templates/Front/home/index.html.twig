{% extends 'base.html.twig' %}

{% block title %}Hello SecretEventController!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="pop-title text-center mt-5 mb-5">
                    Notre actualit√©
                </h1>
            </div>
        </div>
        <div class="row" id="more-content-post">
            {% include 'Front/Partials/Async/Post/post-card-loop.html.twig' %}
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <button class="btn btn-primary" id="more-posts-btn">
                    Voir plus
                </button>
            </div>
        </div>
    </div>

    <section style="background: #DDDDDD">
        <div class="container pt-4">
            <div class="row">
                <div class="col-md-6">
                    {% for aa in regions %}
                        <div>
                            <button class="no-style-btn admin-area-modal-btn" data-aa-id="{{ aa.id }}">
                                {{ aa }}
                            </button>
                        </div>
                    {% endfor %}
                </div>
                <div class="col-md-6">
                    {% for aa in departments %}
                        <div>
                            <button class="no-style-btn admin-area-modal-btn" data-aa-id="{{ aa.id }}">
                                {{ aa }}
                            </button>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="admin-area-modal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="admin-area-modal-label">Modal title</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="admin-area-info">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
